pragma Solidity ^0.8.7;

// Data types - values and references
// boolean structures
// uint = unsigned integer
// uintx = from 0 to 2^x
// intx = from -2^(x-1) to 2^(x-1)-1

contract ValueTypes {
    bool public IsValid = true;
    uint = 123;

    int public i = -123;
    int public minInt = type(int).min;
    int public maxInt = type(int).max;
    address public addr; //enter memory address
    bytes32 public b32; //32 bytes number
}
